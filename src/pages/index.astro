		<script>
			// Terminal typewriter effect
			function typeWriter(elementId, delay = 1000) {
				setTimeout(() => {
					const element = document.getElementById(elementId);
					if (element) {
						element.classList.add('visible');
					}
				}, delay);
			}

			// Apple-style dramatic scroll animations
			function revealSections() {
				const observer = new IntersectionObserver((entries) => {
					entries.forEach(entry => {
						if (entry.isIntersecting) {
							// Add a small delay for more dramatic effect
							setTimeout(() => {
								entry.target.classList.add('visible');
							}, 150);
						}
					});
				}, {
					threshold: 0.15,
					rootMargin: '0px 0px -120px 0px'
				});

				// Observe hidden sections
				document.querySelectorAll('.hidden-section').forEach(section => {
					observer.observe(section);
				});
			}

			// Smooth scroll-based trigger with easing
			function handleScroll() {
				const heroHeight = document.querySelector('.hero').offsetHeight;
				const scrollPosition = window.scrollY;
				const scrollProgress = Math.min(scrollPosition / (heroHeight * 0.6), 1);
				
				// Trigger when 60% through hero section
				if (scrollProgress > 0.6) {
					document.querySelectorAll('.hidden-section').forEach((section, index) => {
						setTimeout(() => {
							section.classList.add('visible');
						}, index * 100); // Stagger section reveals
					});
				}
			}

			// Start the typing sequence when page loads
			document.addEventListener('DOMContentLoaded', () => {
				typeWriter('greeting', 500);
				typeWriter('role', 1000);
				typeWriter('status', 1500);
				typeWriter('description', 2500);
				
				// Set up scroll detection
				revealSections();
				window.addEventListener('scroll', handleScroll);
			});
		</script>
