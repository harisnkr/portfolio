		<script>
			// Terminal typewriter effect
			function typeWriter(elementId, delay = 1000) {
				setTimeout(() => {
					const element = document.getElementById(elementId);
					if (element) {
						element.classList.add('visible');
					}
				}, delay);
			}

			// Apple-style dramatic scroll animations
			function revealSections() {
				const observer = new IntersectionObserver((entries) => {
					entries.forEach(entry => {
						if (entry.isIntersecting) {
							// Add a small delay for more dramatic effect
							setTimeout(() => {
								entry.target.classList.add('visible');
							}, 150);
						}
					});
				}, {
					threshold: 0.15,
					rootMargin: '0px 0px -120px 0px'
				});

				// Observe hidden sections
				document.querySelectorAll('.hidden-section').forEach(section => {
					observer.observe(section);
				});
			}

			// Smooth scroll-based trigger with easing
			function handleScroll() {
				const heroHeight = document.querySelector('.hero').offsetHeight;
				const scrollPosition = window.scrollY;
				const scrollProgress = Math.min(scrollPosition / (heroHeight * 0.6), 1);
				
				// Trigger when 60% through hero section
				if (scrollProgress > 0.6) {
					document.querySelectorAll('.hidden-section').forEach((section, index) => {
						setTimeout(() => {
							section.classList.add('visible');
						}, index * 100); // Stagger section reveals
					});
				}
			}

			// Start the typing sequence when page loads
			document.addEventListener('DOMContentLoaded', () => {
				typeWriter('greeting', 500);
				typeWriter('role', 1000);
				typeWriter('status', 1500);
				typeWriter('description', 2500);
				
				// Set up scroll detection
				revealSections();
				window.addEventListener('scroll', handleScroll);

				// Parallax effect for project cards
				function handleParallax() {
					const cards = document.querySelectorAll('.project-card');
					const scrollY = window.scrollY;
					const windowHeight = window.innerHeight;
					
					cards.forEach((card, index) => {
						const rect = card.getBoundingClientRect();
						
						// Only apply parallax when card is in viewport and visible
						if (rect.top < windowHeight && rect.bottom > 0 && card.classList.contains('visible')) {
							// Different speed for each card (staggered effect)
							const speed = 0.05 + (index * 0.02);
							const yOffset = (scrollY - rect.top) * speed;
							
							// Store parallax offset for hover effects
							card.dataset.parallaxY = yOffset;
							
							// Apply subtle parallax (don't override hover transforms)
							if (!card.matches(':hover')) {
								card.style.transform = `translateY(${yOffset}px) scale(1.01)`;
							}
						}
					});
				}

				// Add parallax to scroll event
				window.addEventListener('scroll', handleParallax);


				


				// Theme toggle functionality
				const themeToggle = document.getElementById('theme-toggle');
				const html = document.documentElement;
				
				// Load saved theme preference
				const savedTheme = localStorage.getItem('theme');
				if (savedTheme) {
					html.setAttribute('data-theme', savedTheme);
				}
				
				// Theme toggle handler
				themeToggle.addEventListener('click', () => {
					const currentTheme = html.getAttribute('data-theme');
					const newTheme = currentTheme === 'light' ? 'dark' : 'light';
					
					html.setAttribute('data-theme', newTheme);
					localStorage.setItem('theme', newTheme);
				});

				// Resume download functionality
				const resumeBtn = document.getElementById('resume-btn');
				const terminalBody = document.querySelector('.terminal-body');
				
				resumeBtn.addEventListener('click', () => {
					// Clear all terminal content completely
					const allLines = terminalBody.querySelectorAll('.terminal-line');
					const allOutputs = terminalBody.querySelectorAll('.terminal-output');
					
					// Remove all lines including the first one
					allLines.forEach(line => line.remove());
					
					// Remove all outputs
					allOutputs.forEach(output => output.remove());
					
					// Add new command line
					const newCommandLine = document.createElement('div');
					newCommandLine.className = 'terminal-line';
					newCommandLine.innerHTML = `
						<span class="prompt">$</span>
						<span class="command">./get_resume.sh</span>
					`;
					terminalBody.appendChild(newCommandLine);
					
					// Add output with animation
					setTimeout(() => {
						const output = document.createElement('div');
						output.className = 'terminal-output';
						output.innerHTML = `
							<div class="output-line" style="color: var(--accent-green); opacity: 0;">Downloading resume...</div>
							<div class="output-line" style="color: var(--accent-blue); opacity: 0;">Opening Google Drive...</div>
						`;
						terminalBody.appendChild(output);
						
						// Animate output lines
						const outputLines = output.querySelectorAll('.output-line');
						outputLines.forEach((line, index) => {
							setTimeout(() => {
								line.style.opacity = '1';
								line.style.animation = 'typewriter 0.5s ease-in';
							}, index * 800);
						});
						
						// Add cursor line
						setTimeout(() => {
							const cursorLine = document.createElement('div');
							cursorLine.className = 'terminal-line';
							cursorLine.innerHTML = `
								<span class="prompt">$</span>
								<span class="command cursor"></span>
							`;
							terminalBody.appendChild(cursorLine);
							
							// Open resume link
							setTimeout(() => {
								window.open('https://drive.google.com/file/d/17trx9PnHUYck4NM9Eo-c9Rc1s1_BTQsT/view?usp=sharing', '_blank');
							}, 1500);
						}, 2000);
					}, 500);
				});

				// 3D tilt effect for project cards
				document.querySelectorAll('.project-card').forEach(card => {
					card.addEventListener('mousemove', (e) => {
						const rect = card.getBoundingClientRect();
						const x = e.clientX - rect.left;
						const y = e.clientY - rect.top;
						
						const centerX = rect.width / 2;
						const centerY = rect.height / 2;
						
						const rotateX = (y - centerY) / 10;
						const rotateY = (centerX - x) / 10;
						
						// Get parallax offset if available
						const parallaxY = card.dataset.parallaxY || 0;
						
						card.style.transform = `
							translateY(${parallaxY - 8}px) 
							scale(1.03) 
							rotateX(${rotateX}deg) 
							rotateY(${rotateY}deg)
						`;
					});
					
					card.addEventListener('mouseleave', () => {
						// Restore parallax position when not hovering
						const parallaxY = card.dataset.parallaxY || 0;
						card.style.transform = `translateY(${parallaxY}px) scale(1.01)`;
					});
				});


			});
		</script>
