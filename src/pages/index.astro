				}

				.work {
					padding: 2.5rem 0;
				}

				.contact {
					padding: 1.5rem 0;
				}

				.section-title {
					font-size: 1.6rem;
					margin-bottom: 1.75rem;
				}

				.projects-grid {
					grid-template-columns: 1fr;
					gap: 1.5rem;
				}

				.project-card {
					padding: 1.5rem;
				}

				.project-title {
					font-size: 1.3rem;
				}

				.project-description {
					font-size: 1.1rem;
				}

				.contact-icons {
					gap: 1.5rem;
				}

				.contact-icon {
					width: 52px;
					height: 52px;
				}

				.contact-label {
					font-size: 0.8rem;
					padding: 0.4rem 0.6rem;
				}

				.hero-links {
					flex-direction: column;
					gap: 1rem;
				}

				.btn-primary, .btn-secondary {
					padding: 1.25rem 1.5rem;
					font-size: 1.1rem;
					min-height: 50px;
				}
			}

			@media (max-width: 480px) {
